@model Restaurante.ViewModels.PedidosVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-4">
                <label asp-for="PedidoMesa"></label>
            </div>
            <div class="col-4">
                @Html.DropDownListFor(u => u.PedidoMesa, Model.PedidoMesa, new {@class = "form-control"})
                <span asp-validation-for="PedidoMesa" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
