@model IEnumerable<Restaurante.Models.Pedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() > 0)
{
    <table id="TablePedidos" class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.PedidoId) </th>
                <th>@Html.DisplayNameFor(c => c.Mesas) </th>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PedidoId)</td>

                    <td>@Html.DisplayFor(modelItem => item.Mesas)</td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PedidoId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PedidoId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PedidoId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}